<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bluured"
    tools:context="com.greycodes.startupbox.ResultActivity">

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/arc_progress"
        android:background="#323237"
       android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        custom:arc_progress="55"
        custom:arc_text_color="#fff"

        custom:arc_bottom_text_size="20sp"
        custom:arc_bottom_text="SIMILAR"/>


</RelativeLayout>
